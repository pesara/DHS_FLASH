<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="${jdbc.driverClassName}" />
		<property name="url" value="${jdbc.url}" />
		<property name="username" value="${jdbc.username}" />
		<property name="password" value="${jdbc.password}" />
	</bean>

	<!-- TODO Transaction settings -->
	<bean id="transactionManager"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="loginDao" class="com.inalab.dao.impl.LoginDaoImpl">
		<property name="dataSource" ref="dataSource"></property>
	</bean>

	<bean id="employeeDao" class="com.inalab.dao.impl.EmployeeDaoImpl">
		<property name="dataSource" ref="dataSource"></property>
	</bean>
	
	<bean id="departmentDao" class="com.inalab.dao.impl.DepartmentDaoImpl">
		<property name="dataSource" ref="dataSource"></property>
	</bean>

	<bean id="kudosDao" class="com.inalab.dao.impl.KudosDaoImpl">
		<property name="dataSource" ref="dataSource"></property>
	</bean>
	
	<!-- Add Logging Advice -->
</beans>
